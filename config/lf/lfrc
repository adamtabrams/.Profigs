### General ###
set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set color256
set incsearch
set findlen 0
set reverse
set hidden
set icons
# set sortby time
set previewer ~/.config/lf/preview.sh

### Mappings ###
map <a-c> $lf -remote "send $id cd '$(~/.config/lf/cd-fzf.sh)'"
map H push <f-1>
map <enter> shell
map <esc> quit
map x $$f
map X !$f
map V $(~/.config/lf/vim-fzf.sh)
map L $lazygit
map D :delete
