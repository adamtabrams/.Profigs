# interpreter for shell commands
set shell zsh

# set '-eu' options for shell commands
# These options are used to have safer shell commands.
set shellopts '-eu'

# leave some space at the top and the bottom of the screen
set scrolloff 10

# quickly opens help
map H push <f-1>

# use enter for shell commands
map <enter> shell

# use escape for quitting
map <esc> quit

# execute current file (must be executable)
map x $$f
map X !$f

# set preview window to script in config
set previewer ~/.config/lf/pv.sh

# integrate fzf
map V $(~/.config/lf/vim-fzf.sh)
map F $lf -remote "send $id cd '$(~/.config/lf/cd-fzf.sh)'"
map L $lazygit
map D :delete

# General
set incsearch
set color256
set sortby time
set reverse

# set internal field separator (IFS) to "\n" for shell commands
# set ifs "\n"

