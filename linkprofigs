#!/bin/bash

# Create backup directory
pfgs=$HOME/.Profigs
backup=$HOME/.old-configs/$(date +%m-%d-%Y_Time%H-%M-%S)
mkdir -pv $backup

# Archive old configs in $HOME, then create links
mv -nv -t "$backup/" $HOME/.vimrc $HOME/.bashrc $HOME/.zshrc $HOME/.profile $HOME/.Xdefaults $HOME/.Xresources $HOME/.scripts $HOME/.examples

ln -sv -t "$HOME/" $pfgs/.vimrc $pfgs/.bashrc $pfgs/.zshrc $pfgs/.profile $pfgs/.Xdefaults $pfgs/.Xresources $pfgs/.scripts $pfgs/.examples

# Archive old configs in $HOME/.config, then create links
mkdir -pv $HOME/.config/
cnfg=$HOME/.config

mv -nv -t "$backup/" $cnfg/dunst $cnfg/gtk-2.0 $cnfg/gtk-3.0 $cnfg/htop $cnfg/i3 $cnfg/i3blocks $cnfg/latexmk $cnfg/mpv $cnfg/nvim $cnfg/vifm

ln -sv -t "$cnfg/" $pfgs/dunst $pfgs/gtk-2.0 $pfgs/gtk-3.0 $pfgs/htop $pfgs/i3 $pfgs/i3blocks $pfgs/latexmk $pfgs/mpv $pfgs/nvim $pfgs/vifm

mv -nv $HOME/.config/wall.png $backup/
ln -sv $HOME/.Profigs/wallpaper.jpg $HOME/.config/wall.png

#/ect
	#pacman, lightdm, ssh
